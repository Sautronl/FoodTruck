<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/scrollMenu"
    android:layout_marginTop="33dp"
    android:background="@drawable/foodtruck_bg"
    android:layout_height="match_parent"
    tools:context="fr.wcs.foodtruck.UI.Activity.User.MenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/Aujourdhui"
            android:textAllCaps="true"
            android:textColor="@color/blanc"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/placement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Placement"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/blanc"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="15dp"

            android:layout_height="15dp" />

        <TextView
            android:id="@+id/adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/blanc"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgDuPlatMenu"
                android:layout_width="300dp"
                android:layout_height="223dp"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/bleuTurk"
                app:civ_border_overlay="true"
                app:civ_border_width="2dp"
                android:src="@drawable/burger_user"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/buttonPrix"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/buttonPrix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_jade_black"
                android:textColor="@color/blanc"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/burger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/blanc"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriPlat"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/burger"
                android:textAlignment="center"
                android:textColor="@color/textEnvoyer"
                android:textSize="18sp" />

            <Button
                android:id="@+id/reserver"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/border_jade_black"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/reserver"
                android:textColor="@color/blanc"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totheformules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="17dp"
                android:text="@string/decouvrez"
                android:textAlignment="center"
                android:textColor="@color/blanc"
                android:textSize="20sp" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
