<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:id="@+id/scrollMenuAdmin"
    android:background="@drawable/foodtruck_bg"
    tools:context="fr.wcs.foodtruck.UI.Activity.User.MenuDuJour">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/majNamePlat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imgplus"
            android:layout_centerHorizontal="true"
            android:text="Plat du jour"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/blanc"
            android:textSize="25sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editImg"
                android:layout_alignEnd="@+id/imgDuPlat"
                android:layout_alignRight="@+id/imgDuPlat"
                android:layout_alignTop="@+id/imgDuPlat"
                android:layout_marginEnd="29dp"
                android:layout_marginRight="29dp"
                android:src="@android:drawable/ic_menu_edit" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgDuPlat"
                android:layout_width="match_parent"
                android:layout_height="223dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/bleuTurk"
                app:civ_border_overlay="true"
                app:civ_border_width="2dp"
                android:src="@drawable/burger_user"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp" />

        </RelativeLayout>

        <EditText
            android:id="@+id/nomDuPlat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"
            android:background="@drawable/border_jade_black"
            android:hint="Nom du plat"
            android:textAlignment="center"
            android:textColor="@color/blanc"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:id="@+id/prix"
            android:textAlignment="center"
            android:textColor="@color/blanc"
            android:background="@drawable/border_jade_black"
            android:hint="Prix"
            />
        <EditText
            android:id="@+id/descriPlat"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="7dp"
            android:gravity="top"
            android:textAlignment="center"
            android:hint="Description du plat"
            android:textColor="@color/blanc"
            android:background="@drawable/border_jade_black"
            android:textSize="20sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/reserverMenu"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_jade_black"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Mettre Ã  jour"
            android:textColor="@color/blanc"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>