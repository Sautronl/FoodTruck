<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lvNomContactAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Event Name"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lvTelContactAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lvNomContactAdmin"
        android:layout_alignStart="@+id/lvNomContactAdmin"
        android:layout_below="@+id/lvNomContactAdmin"
        android:layout_marginRight="20dp"
        android:text="Details"
        android:textColor="@color/blanc"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/lvSujetContactAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lvTelContactAdmin"
        android:text="Details"
        android:textColor="@color/blanc"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lvMessageContactAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lvTelContactAdmin"
        android:layout_marginTop="22dp"
        android:text="Details"
        android:textColor="@color/blanc"
        android:textSize="17sp" />

</RelativeLayout>