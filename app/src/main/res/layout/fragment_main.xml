<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="39dp"
    android:background="@drawable/foodtruck_bg"
    tools:context="fr.wcs.foodtruck.UI.Activity.User.MainFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="58dp"
            android:layout_marginTop="34dp"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="270dp"
                android:layout_height="130dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="91dp"
                app:srcCompat="@drawable/burger_user" />

            <ImageView
                android:id="@+id/presentation"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignLeft="@+id/menu"
                android:layout_alignStart="@+id/menu"
                android:layout_below="@+id/menu"
                android:layout_marginTop="17dp"
                app:srcCompat="@drawable/truck_user" />

            <ImageView
                android:id="@+id/lieu"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignEnd="@+id/menu"
                android:layout_alignRight="@+id/menu"
                android:layout_alignTop="@+id/presentation"
                app:srcCompat="@drawable/local_user" />

            <ImageView
                android:id="@+id/contact"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignLeft="@+id/presentation"
                android:layout_alignStart="@+id/presentation"
                android:layout_below="@+id/presentation"
                android:layout_marginTop="14dp"
                app:srcCompat="@drawable/contact_user" />


            <ImageView
                android:id="@+id/event"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignLeft="@+id/lieu"
                android:layout_alignStart="@+id/lieu"
                android:layout_alignTop="@+id/contact"
                app:srcCompat="@drawable/event_user" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:background="@drawable/logosdf"
                tools:layout_editor_absoluteX="132dp"
                tools:layout_editor_absoluteY="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">


        </RelativeLayout>

        <ImageView
            android:id="@+id/like"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"

            android:layout_marginStart="128dp"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:src="@drawable/like"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="123dp"
            android:padding="5dp"
            android:src="@drawable/star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout3"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>


</ScrollView>
